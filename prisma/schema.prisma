model GroupMember {
  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])

  userId  Int
  groupId Int

  @@id([userId, groupId])
  @@index([userId])
  @@index([groupId])
}
